			class="inputbox_205"
			/>
		
		<field
			name="thumb_width"
			type="text"
			default="220"
			label="KSM_PRODUCT_THUMBWIDTH_LABEL"
			description="KSM_PRODUCT_THUMBWIDTH_DESC"
			labelclass="inputname"
			class="inputbox_205"
			/>
			
		<field
			name="thumb_height"
			type="text"
			default="220"
			label="KSM_PRODUCT_THUMBHEIGHT_LABEL"
			description="KSM_PRODUCT_THUMBHEIGHT_DESC"
			labelclass="inputname"
			class="inputbox_205"
			/>	
			
		<field
			name="middle_width"
			type="text"
			default="350"
			label="KSM_PRODUCT_MIDDLEWIDTH_LABEL"
			description="KSM_PRODUCT_MIDDLEWIDTH_DESC"
			labelclass="inputname"
			class="inputbox_205"
			/>
			
		<field
			name="middle_height"
			type="text"
			default="350"
			label="KSM_PRODUCT_MIDDLEHEIGHT_LABEL"
			description="KSM_PRODUCT_MIDDLEHEIGHT_DESC"
			labelclass="inputname"
			class="inputbox_205"
			/>

		<field
			name="mini_thumb_width"
			type="text"
			default="110"
			label="KSM_PRODUCT_MINITHUMBWIDTH_LABEL"
			description="KSM_PRODUCT_MINITHUMBWIDTH_DESC"
			labelclass="inputname"
			class="inputbox_205"
			/>
			
		<field
			name="mini_thumb_height"
			type="text"
			default="110"
			label="KSM_PRODUCT_MINITHUMBHEIGHT_LABEL"
			description="KSM_PRODUCT_MINITHUMBHEIGHT_DESC"
			labelclass="inputname"
			class="inputbox_205"
			/>

		<field
			name="manufacturer_width"
			type="text"
			default="240"
			label="KSM_PRODUCT_MANUFACTURERWIDTH_LABEL"
			description="KSM_PRODUCT_MANUFACTURERWIDTH_DESC"
			labelclass="inputname"
			class="inputbox_205"
		/>
			
		<field
			name="manufacturer_height"
			type="text"
			default="120"
			label="KSM_PRODUCT_MANUFACTURERHEIGHT_LABEL"
			description="KSM_PRODUCT_MANUFACTURERHEIGHT_DESC"
			labelclass="inputname"
			class="inputbox_205"
		/>
		
	</fieldset>
	<fieldset name="KSM_SEARCH_CONFIG"
		label="KSM_SEARCH_CONFIG_LABEL"
		description="KSM_SEARCH_CONFIG_DESC">
        
		<field
			name="count_result"
			type="text"
            default="5"
			label="KSM_SEARCH_COUNT_RESULT_LABEL"
			description="KSM_SEARCH_COUNT_RESULT_DESC"
			labelclass="inputname"
			class="inputbox_205"
        />
		<field
			name="count_relevants"
			type="text"
            default="3"
			label="KSM_SEARCH_COUNT_RELEVANTS_LABEL"
			description="KSM_SEARCH_COUNT_RELEVANTS_DESC"
			labelclass="inputname"
			class="inputbox_205"
        />
		<field
			name="count_categories"
			type="text"
            default="1"
			label="KSM_SEARCH_COUNT_CAT_LABEL"
			description="KSM_SEARCH_COUNT_CAT_DESC"
			labelclass="inputname"
			class="inputbox_205"
        />
		<field
			name="count_manufactured"
			type="text"
            default="1"
			label="KSM_SEARCH_COUNT_MANUFACTURED_LABEL"
			description="KSM_SEARCH_COUNT_MANUFACTURED_DESC"
			labelclass="inputname"
			class="inputbox_205"
        />
	</fieldset>
</config>