			labelclass="inputname"
			class="inputbox_205"
			/>
			
		<field
			name="full_height"
			type="text"
			default="900"
			label="KSM_PRODUCT_FULLHEIGHT_LABEL"
			description="KSM_PRODUCT_FULLHEIGHT_DESC"
