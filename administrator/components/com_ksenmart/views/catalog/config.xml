<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="KSM_PRODUCT_CATALOG_CONFIG"
		label="KSM_PRODUCT_CATALOG_CONFIG_LABEL"
		description="KSM_PRODUCT_CATALOG_CONFIG_DESC">

		<field
			name="catalog_default_view"
			type="list"
			default="grid"
			label="KSM_PRODUCT_CATALOG_DEFAULT_VIEW_LABEL"
			description="KSM_PRODUCT_CATALOG_DEFAULT_VIEW_DESC"
			labelclass="inputname"
			class="sel"
			>
			<option
				value="grid">KSM_PRODUCT_CATALOG_DEFAULT_VIEW_GRID</option>
			<option
				value="list">KSM_PRODUCT_CATALOG_DEFAULT_VIEW_LIST</option>
			<option
				value="list_ext">KSM_PRODUCT_CATALOG_DEFAULT_VIEW_LIST_EXT</option>
		</field>

		<field
			name="show_products_from_subcategories"
			type="radio"
			default="0"
			label="KSM_PRODUCT_SHOWFROMSUBCATEGORIES_LABEL"
			description="KSM_PRODUCT_SHOWFROMSUBCATEGORIES_DESC"
			labelclass="inputname"
			>
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>
		
		<field
			name="show_out_stock"
			type="radio"
			default="0"
			label="KSM_PRODUCT_SHOWOUTSTOCK_LABEL"
			description="KSM_PRODUCT_SHOWOUTSTOCK_DESC"
			labelclass="inputname"
			>
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>
		
		<field
			name="order_process"
			type="radio"
			default="0"
			label="KSM_PRODUCT_ORDERPROCESS_LABEL"
			description="KSM_PRODUCT_ORDERPROCESS_DESC"
			labelclass="inputname"
			>
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>

		<field
			name="show_comment_form"
			type="radio"
			default="1"
			label="KSM_PRODUCT_SHOWCOMMENTFORM_LABEL"
			description="KSM_PRODUCT_SHOWCOMMENTFORM_DESC"
			labelclass="inputname"
			>
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>			

		<field
			name="site_product_limit"
			type="text"
			default="30"
			label="KSM_PRODUCT_LISTLIMIT_LABEL"
			description="KSM_PRODUCT_LISTLIMIT_DESC"
			labelclass="inputname"
			class="inputbox_205"
			/>
			
		<field
			name="site_use_pagination"
			type="radio"
			default="1"
			label="KSM_PRODUCT_USEPAGINATION_LABEL"
			description="KSM_PRODUCT_USEPAGINATION_DESC"
			labelclass="inputname"
			>
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>
		
		<field
			name="parent_products_template"
			type="radio"
			default="list"
			label="KSM_PRODUCT_PARENTPRODUCTTEMPLATE_LABEL"
			description="KSM_PRODUCT_PARENTPRODUCTTEMPLATE_DESC"
			labelclass="inputname"
			>
			<option
				value="list">KSM_PARENTPRODUCTTEMPLATE_LIST</option>
			<option
				value="select">KSM_PARENTPRODUCTTEMPLATE_SELECT</option>
		</field>
		
		<field
			name="only_auth_buy"
			type="radio"
			default="0"
			label="KSM_PRODUCT_ONLYAUTHBUY_LABEL"
			description="KSM_PRODUCT_ONLYAUTHBUY_DESC"
			labelclass="inputname"
			>
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>	

		<field
			name="use_stock"
			type="radio"
			default="1"
			label="KSM_PRODUCT_USESTOCK_LABEL"
			description="KSM_PRODUCT_USESTOCK_DESC"
			labelclass="inputname"
			>
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>		

		<field
			name="catalog_mode"
			type="radio"
			default="0"
			label="KSM_PRODUCT_CATALOGMODE_LABEL"
			description="KSM_PRODUCT_CATALOGMODE_DESC"
			labelclass="inputname"
			>
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>	
			
	</fieldset>	
	
