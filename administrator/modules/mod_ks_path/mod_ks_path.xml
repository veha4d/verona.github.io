<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="module" client="administrator" method="upgrade">
    <name>Хлебные крошки Ksenmart</name>
	<version>2.0.1</version>
	<creationDate>March 2013</creationDate>
	<author>L.D.M. Co</author>
	<authorEmail>boss.ldm@gmail.com</authorEmail>
	<authorUrl>http://www.lukyan-dm.ru/</authorUrl>
	<copyright>Copyright (C) 2008-2013 L.D.M. Co All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>MOD_KS_PATH_DESCRIPTION</description>

	<files>
		<filename module="mod_ks_path">mod_ks_path.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
	    <folder>js</folder>
	    <folder>sql</folder>
	</files>
	
	<languages folder="language">
        <language tag="ru-RU">ru-RU/ru-RU.mod_ks_path.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_ks_path.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_ks_path.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_ks_path.sys.ini</language>
    </languages>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <updateservers>
        <server type="extension" priority="1" name="mod_ks_path">http://update.ksenmart.ru/update-info/j3/ksen_extensions/modules/administrator/mod_ks_path-update.xml</server>
    </updateservers>
    
	<config>
		<fields name="params">
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>	
	</config>
</extension>