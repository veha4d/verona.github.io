    <creationDate>March 2014</creationDate>
    <author>L.D.M. Co</author>
    <authorEmail>boss.ldm@gmail.com</authorEmail>
    <authorUrl>http://www.lukyan-dm.ru/</authorUrl>
    <copyright>Copyright (C) 2008-2013 L.D.M. Co All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>KSM_PAYMENT_COURIER_DESCRIPTION</description>

    <files>
		<filename plugin="courier">courier.php</filename>
		<filename>index.html</filename>
        <folder>sql</folder>
    </files>

    <languages folder="language">
        <language tag="ru-RU">ru-RU/ru-RU.plg_kmpayment_courier.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_kmpayment_courier.sys.ini</language>
    </languages>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
	   
    <updateservers>
        <server type="extension" priority="1" name="courier">http://update.ksenmart.ru/update-info/j3/pkg_ksenmart/com_ksenmart/plugins/plg_courier-update.xml</server>
    </updateservers>

</extension>