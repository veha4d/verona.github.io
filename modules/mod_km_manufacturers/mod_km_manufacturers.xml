<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
	<name>mod_km_manufacturers</name>
	<author>ToMuH</author>
	<creationDate>July 2011</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>tominpasha@mail.ru</authorEmail>
	<authorUrl></authorUrl>
	<version>1.1.2</version>
	<description>Производители KsenMart</description>
	
	<files>
		<filename module="mod_km_manufacturers">mod_km_manufacturers.php</filename>
		<folder>tmpl</folder>
		<folder>js</folder>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>mod_km_manufacturers.xml</filename>
	</files>
	
	<languages folder="languages">
		<language tag="ru-RU">ru-RU.mod_km_manufacturers.ini</language>
		<language tag="ru-RU">ru-RU.mod_km_manufacturers.sys.ini</language>
		<language tag="en-GB">en-GB.mod_km_manufacturers.ini</language>
		<language tag="en-GB">en-GB.mod_km_manufacturers.sys.ini</language>
	</languages>

    <updateservers>
        <server type="extension" priority="1" name="mod_km_manufacturers">http://update.ksenmart.ru/update-info/j3/pkg_ksenmart/com_ksenmart/modules/site/mod_km_manufacturers-update.xml</server>
    </updateservers>
	
	<config>
		<fields name="params">
			<fieldset name="basic">	
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
				<field
					name="group"
					type="radio"
					default="0"
					label="MOD_KSENMART_MANUFACTURERS_GROUP_LABEL"
					description="MOD_KSENMART_MANUFACTURERS_GROUP_DESC"
					class="btn-group btn-group-yesno"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>		
		</fields>	
	</config>	
</extension>
